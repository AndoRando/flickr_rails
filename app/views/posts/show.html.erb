<h1><%= @post.title %></h1>

<p><%= image_tag(@post.image, :alt => "Goldendoodle puppy") %></p>

<p><%= @post.caption %></p>

<h3>Tags:</h3>

<ul>
  <% @post.tags.each do |tag| %>
    <li><%= link_to tag.name, post_tag_path(@post, tag) %> |
        <%= link_to "Edit", edit_post_tag_path(@post, tag) %>
        <%= link_to "Delete", post_path(@post), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to "Edit Post", edit_post_path(@post) %>
<%= link_to "Delete Post", post_path(@post), method: :delete %>
